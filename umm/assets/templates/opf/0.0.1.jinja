{# references: #}
{# https://docs.fileformat.com/ebook/opf/ #}
{# https://web.archive.org/web/20090604120716/http://www.idpf.org/2007/opf/OPF_2.0_final_spec.html #}
<?xml version='1.0' encoding='utf-8'?>
<package
  xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns="http://www.idpf.org/2007/opf"
  version="2.0" unique-identifier="bookid">
  <metadata>
    <meta name="cover" content="{{ umm.metadata.cover }}"/>
    <!-- Book Identifiers, ISBN, ASIN, etc -->
    <dc:identifier opf:scheme="ISBN" id="bookid">{{ umm.metadata.identifiers.isbn }}</dc:identifier>
    <dc:identifier opf:scheme="ASIN">{{ umm.metadata.identifiers.asin }}</dc:identifier>
    {% if umm.info.uuid %}
    <dc:identifier opf:scheme="UUID">{{ umm.info.uuid }}</dc:identifier>
    {% endif %}
    <!-- Book Information -->
    <dc:title>{{ umm.metadata.title }}</dc:title>
    <dc:language>{{ umm.metadata.language }}</dc:language>
    <dc:author>{{ umm.metadata.author }}</dc:author>
    <dc:narrator>{{ umm.metadata.narrator }}</dc:narrator>
    <dc:date opf:event="publication">{{ umm.metadata.date }}</dc:date>
    <dc:publisher>{{ umm.metadata.publisher }}</dc:publisher>
    <calibre:series>{{ umm.metadata.series.name }}</calibre:series>
    <calibre:series_index>{{ umm.metadata.series.volume }}</calibre:series_index>
    {% if umm.metadata.genres %}
    <!-- Genres -->
      {% for genre in umm.metadata.genres %}
    <dc:subject>{{ genre }}</dc:subject>
      {% endfor %}
    {% endif %}
    {% if umm.metadata.tags %}
    <!-- Tags -->
      {% for tag in umm.metadata.tags %}
    <dc:tag>{{ tag }}</dc:tag>
      {% endfor %}
    {% endif %}
  </metadata>
</package>
